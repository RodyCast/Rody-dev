             x:Class="App1_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="logo_correios.png" x:Name="LOGO"/>
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#FFBFF00" BackgroundColor="#FFFFFF" x:Name="CEP"/>
        <Button Text="Buscar CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" x:Name="BOTAO"/>
        <Label Text="" HorizontalOptions="Center" VerticalOptions="Center" x:Name="RESULT" />
    </StackLayout>

</ContentPage>
